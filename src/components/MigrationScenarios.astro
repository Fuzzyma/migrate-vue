---
import { Icon } from "astro-icon/components";

const migrationScenarios = [
  {
    from: { name: "Vue 2", icon: "skill-icons:vuejs-light" },
    to: { name: "Vue 3", icon: "skill-icons:vuejs-light" },
  },
  {
    from: { name: "Nuxt 2", icon: "skill-icons:nuxtjs-light" },
    to: { name: "Nuxt 3", icon: "skill-icons:nuxtjs-light" },
  },
  {
    from: { name: "Vuex", icon: "skill-icons:vuejs-light" }, // Replace with Vuex icon if available
    to: { name: "Pinia", icon: "skill-icons:pinia-light" },
  },
  {
    from: { name: "Vuetify", icon: "skill-icons:vuetify-light" },
    to: { name: "Vuetify 3", icon: "skill-icons:vuetify-light" },
  },
  {
    from: { name: "Quasar", icon: "devicon:quasar" }, // Replace with Quasar icon if available
    to: { name: "Quasar 2", icon: "devicon:quasar" },
  },
  {
    from: { name: "webpack", icon: "skill-icons:webpack-light" }, // Replace with webpack icon if available
    to: { name: "Vite", icon: "skill-icons:vite-light" },
  },
  {
    from: { name: "vue-cli", icon: "skill-icons:vuejs-light" }, // Replace with vue-cli icon if available
    to: { name: "Vite", icon: "skill-icons:vite-light" },
  },
  {
    from: { name: "Jest", icon: "skill-icons:jest" }, // Replace with vue-cli icon if available
    to: { name: "Vitest", icon: "skill-icons:vitest-light" },
  },
];
---

<section class="migration-scenarios-section py-12 text-center">
  <h2 class="text-3xl font-bold text-center mb-6">Migration Scenarios</h2>
  <p class="mb-4 text-gray-700">Some of the most common migration scenarios</p>
  <div class="flex flex-wrap justify-center gap-8 text-gray-700">
    {
      migrationScenarios.map((scenario) => (
        <div class="flex items-center space-x-4">
          <div class="icon-box text-3xl">
            <Icon name={scenario.from.icon} class="text-gray-500" />
          </div>
          <div class="text-xl font-medium">
            <span>{scenario.from.name}</span>
          </div>
          <div class="arrow text-xl">→</div>
          <div class="icon-box text-3xl">
            <Icon name={scenario.to.icon} class="text-blue-500" />
          </div>
          <div class="text-xl font-medium">
            <span>{scenario.to.name}</span>
          </div>
        </div>
      ))
    }
  </div>
</section>

